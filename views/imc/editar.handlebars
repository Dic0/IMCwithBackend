<h1>Editando Dados do IMC: {{usuario.nome}}</h1>
<form action="/imc/editar" method="POST">
  <input type="hidden" name="id" value="{{usuario.id}}">
  
  <div class="form-control">
    <label for="nome">Nome:</label>
    <input type="text" id="nome" name="nome" placeholder="Seu nome" value="{{usuario.nome}}" required>
  </div>
  
  <div class="form-control">
    <label for="peso">Peso (kg):</label>
    <input type="number" id="peso" name="peso" placeholder="Seu peso em kg" step="0.1" value="{{usuario.peso}}" required>
  </div>
  
  <div class="form-control">
    <label for="altura">Altura (m):</label>
    <input type="number" id="altura" name="altura" placeholder="Sua altura em metros" step="0.01" value="{{usuario.altura}}" required>
  </div>
  
  <div class="form-control">
    <label for="idade">Idade:</label>
    <input type="number" id="idade" name="idade" placeholder="Sua idade" value="{{usuario.idade}}" required>
  </div>
  
  <div class="form-control">
    <label for="sexo">Sexo:</label>
    <select id="sexo" name="sexo" required>
        <option value="masculino" {{#if (eq usuario.sexo 'masculino')}}selected{{/if}}>Masculino</option>
        <option value="feminino" {{#if (eq usuario.sexo 'feminino')}}selected{{/if}}>Feminino</option>
        <option value="outro" {{#if (eq usuario.sexo 'outro')}}selected{{/if}}>Outro</option>
    </select>
  </div>
  
  <input type="submit" value="Atualizar">
</form>
