<h1>Todas as Informações de IMC:</h1>
<ul class="imc-lista">
  {{#if nenhumaInformacao}}
    <p>Não há informações cadastradas</p>
  {{/if}}
  {{#each informacoesIMC}}
    <li>

      <span class="nome">{{this.nome}}</span>

      <span class="detalhes">
        Peso:
        {{this.peso}}
        kg, Altura:
        {{this.altura}}
        m, IMC:
        {{this.imc}}
      </span>
      <span class="actions">
        <a href="/imc/editar/{{this.id}}"><i
            class="bi bi-pencil-square"
          ></i></a>
        <form action="/imc/remover" method="POST">
          <input type="hidden" name="id" value="{{this.id}}" />
          <button type="submit">
            <i class="bi bi-x-lg"></i>
            Remover
          </button>
        </form>
      </span>
    </li>
  {{/each}}
</ul>